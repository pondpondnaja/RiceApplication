<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2_va"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/login_banner"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/validate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            //รอบที่
            <TextView
                android:id="@+id/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s2"
                android:textSize="23sp"
                android:paddingTop="5dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/round_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/round"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_marginTop="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:textAlignment="center"/>
            //ชื่อสินค้า
            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s3"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/round"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/goods_name_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/round_va"
                android:layout_toRightOf="@id/goods_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:textAlignment="center"/>
            //ชนิด Radio
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s4"
                android:textSize="23sp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/goods_name"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/type_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_toRightOf="@id/type"
                android:layout_below="@id/goods_name_va">
            </TextView>

            //ความหนา Radio
            <TextView
                android:id="@+id/thickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s7"
                android:layout_below="@id/type"
                android:textSize="25sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_inside_backgound"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/thickness_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_below="@id/thickness">
            </TextView>

            //Temp/speed นึ่ง หัวข้อ
            <TextView
                android:id="@+id/steam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s11"
                android:layout_below="@id/thickness_va"
                android:textSize="25sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_inside_backgound"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"/>
            //80-90
            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s12"
                android:textSize="23sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/steam"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/temperature_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/steam"
                android:layout_toRightOf="@id/temperature"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:textAlignment="center"
                android:inputType="number"/>
            //20 RPM
            <TextView
                android:id="@+id/rpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s13"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/temperature"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/rpm_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/temperature_va"
                android:layout_toRightOf="@id/rpm"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:textAlignment="center"
                android:inputType="number"/>
            //Temp-Speed อบหมาด หัวข้อ
            <TextView
                android:id="@+id/damp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s14"
                android:layout_below="@id/rpm"
                android:textSize="25sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_inside_backgound"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"/>
            //70-80
            <TextView
                android:id="@+id/temperature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s15"
                android:textSize="23sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/damp"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/temperature2_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/damp"
                android:layout_toRightOf="@id/temperature2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:background="@drawable/edittext_box"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:inputType="number"/>
            //50 RPM
            <TextView
                android:id="@+id/rpm_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s16"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/temperature2"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/rpm2_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/temperature2_va"
                android:layout_toRightOf="@id/rpm_2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:textAlignment="center"
                android:inputType="number"/>
            //เวลา หัวข้อ
            <TextView
                android:id="@+id/time_fg_2_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s17"
                android:layout_below="@id/rpm_2"
                android:textSize="25sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_inside_backgound"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"/>
            //เริ่ม
            <TextView
                android:id="@+id/time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s18"
                android:textSize="23sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/time_fg_2_head"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/time_start_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/time_fg_2_head"
                android:layout_toRightOf="@id/time_start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:textAlignment="center"
                android:hint="@string/hint_2"/>
            //เสร็จ
            <TextView
                android:id="@+id/time_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s19"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/time_start"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/time_done_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/time_start_va"
                android:layout_toRightOf="@id/time_done"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:textAlignment="center"
                android:hint="@string/hint_2"/>
            //จำนวน
            <TextView
                android:id="@+id/how_many"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s20"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/time_done"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/how_many_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/time_done_va"
                android:layout_toRightOf="@id/how_many"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:background="@drawable/edittext_box"
                android:hint="@string/menu2_s21"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:inputType="number"/>
            //เศษแป้ง
            <TextView
                android:id="@+id/remaining_flour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s22"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/how_many"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/remaining_flour_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/how_many_va"
                android:layout_toRightOf="@id/remaining_flour"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:hint="@string/menu2_s23"
                android:textAlignment="center"
                android:inputType="number"/>
            //ผู้รับผิดชอบ
            <TextView
                android:id="@+id/supervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu2_s24"
                android:layout_below="@id/remaining_flour_va"
                android:textSize="25sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_inside_backgound"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/supervisor_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/supervisor"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_box"
                android:textAlignment="center" />

            //กดปุ่ม
            <Button
                android:id="@+id/validate2_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/supervisor_va"
                android:layout_centerHorizontal="true"
                android:text="@string/btn_name"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>