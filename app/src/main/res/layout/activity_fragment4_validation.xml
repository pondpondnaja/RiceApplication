<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4_va"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/login_banner"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/rice_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ข้าว/ก.ส."
                android:textSize="23sp"
                android:paddingTop="5dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/rice_edit_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rice_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/ProductName_4_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อสินค้า"
                android:textSize="23sp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/rice_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/ProductName_edit_4_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/rice_edit_va"
                android:layout_toRightOf="@id/ProductName_4_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/packed_4_va"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="บรรจุแล้ว"
                android:layout_below="@id/ProductName_edit_4_va"
                android:textSize="25sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_inside_backgound"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/manybox_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="จำนวนกล่อง"
                android:textSize="23sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/packed_4_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/manybox_edit_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/packed_4_va"
                android:layout_toRightOf="@id/manybox_va"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/manysong_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="จำนวนซอง"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/manybox_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/manysong_edit_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/manybox_edit_va"
                android:layout_toRightOf="@id/manysong_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/waiting_packing_va"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="รอบรรจุ"
                android:layout_below="@id/manysong_edit_va"
                android:textSize="25sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_inside_backgound"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/manybox_waiting_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="จำนวนกล่อง"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/waiting_packing_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/manybox_edit_waiting_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/waiting_packing_va"
                android:layout_toRightOf="@id/manybox_waiting_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/manysong_waiting_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="จำนวนซอง"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/manybox_waiting_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/manysong_edit_waiting_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/manybox_edit_waiting_va"
                android:layout_toRightOf="@id/manysong_waiting_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/pang_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="แป้งเปื้อน"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/manysong_waiting_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/pang_edit_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/manysong_edit_waiting_va"
                android:layout_toRightOf="@id/pang_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/pang_copy_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="แป้งลอก"
                android:textSize="23sp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/pang_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/pang_edit_copy_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/pang_edit_va"
                android:layout_toRightOf="@id/pang_copy_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/head_too_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หัวตู้"
                android:textSize="23sp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/pang_copy_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/head_edit_too_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/pang_edit_copy_va"
                android:layout_toRightOf="@id/head_too_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/room_pack_va"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ห้องแพ๊ค"
                android:textSize="23sp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/head_too_va"
                android:textColor="@color/alltextcolor"/>

            <TextView
                android:id="@+id/room_edit_pack_va"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/head_edit_too_va"
                android:layout_toRightOf="@id/room_pack_va"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/form4_btn_va"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_edit_pack_va"
                android:layout_centerHorizontal="true"
                android:text="@string/btn_name"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>